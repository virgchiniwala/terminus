{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Terminus",
  "version": "0.1.0",
  "identifier": "com.terminus.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Terminus",
        "width": 1200,
        "height": 780,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: data:; style-src 'self'; script-src 'self'; connect-src 'self' ipc: https://api.openai.com https://api.anthropic.com https://generativelanguage.googleapis.com;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
